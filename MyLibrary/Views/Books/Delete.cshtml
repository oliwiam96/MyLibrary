@model MyLibrary.Models.Book

@{
    ViewBag.Title = "Usuń";
}

<h2>Usuwanie książki z bazy</h2>

<h3>Jesteś pewien, że chcesz usunąć tę pozycję z bazy książek?</h3>
<div>
    <h4>Książka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UrlPhoto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrlPhoto)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy książek w bazie", "Index")
        </div>
    }
</div>
