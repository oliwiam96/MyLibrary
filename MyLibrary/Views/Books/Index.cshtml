@model IEnumerable<MyLibrary.Models.Book>

@{
    ViewBag.Title = "Index";
}
@section Styles{
    <link href="@Url.Content("~/Styles/Books/index.css")" rel="stylesheet" type="text/css" />
}

<h2>Index</h2>
<p>
    <i class="fa fa-pencil" aria-hidden="true"></i>
    <i class="fa fa-address-book" aria-hidden="true"></i>
    <i class="fa fa-book" aria-hidden="true"></i>
</p>
<p>
    <a href="@Url.Action("Create")" class="btn btn-warning">
        Create New Manually
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
    <a href="@Url.Action("CreateExternal")" class="btn btn-warning">
        Create New From Lubimyczytac.pl
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
    </a>
</p>
@using (Html.BeginForm())
{
    <p>
        Find by title: @Html.TextBox("SearchTitleString")
    </p>
    <p>

        Find by author: @Html.TextBox("SearchAuthorString")
    </p>
    <p>
        <input type="submit" value="Search" />
    </p>
}

@{
    var j = 0;
    while (j < Model.Count())
    {
        <div class="row form-group">
            @for (var k = 0; k < 4 && j < Model.Count(); k++)
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <a href="@Model.ElementAt(j).UrlPhoto">
                            <img class="img-responsive" src="@Model.ElementAt(j).UrlPhoto" alt="Cover of a book" />
                        </a>
                        <div class="caption">
                            <h3>@Model.ElementAt(j).Title</h3>
                            <h4>@Model.ElementAt(j).Author</h4>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(j).Id }) |
                                @Html.ActionLink("Details", "Details", new { id = Model.ElementAt(j).Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(j).Id })
                            </p>
                        </div>

                    </div>
                </div>
                j++;
            }

        </div>


    }
}










