
@{
    ViewBag.Title = "Dodaj z lubimyczytac";
}

<h2>Dodaj książkę z zewnętrznego źródła</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Książka</h4>
        <h5>Wklej link z opisem książki ze strony lubimyczytac.pl</h5>
        <hr />
        <div class="form-group">
            @Html.Label("Link ze strony lubimyczytac", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("UrlExternal", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy książek w bazie", "Index")
</div>
