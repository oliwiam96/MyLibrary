@{
    ViewBag.Title = "MyLibrary Strona główna";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 850px;   margin: auto;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="/Content/Images/book.jpg" alt="book">
            <div class="carousel-caption">
                <h3>Domowa biblioteczka</h3>
                <p>Dodaj do biblioteki wszystkie swoje książki!</p>
            </div>
        </div>

        <div class="item">
            <img src="/Content/Images/love.jpg" alt="love">
            <div class="carousel-caption">
                <h3>Twoje spojrzenie na książkę</h3>
                <p>Umieszczaj przy ulubionych pozycjach własne komentarze.</p>
            </div>
        </div>

        <div class="item">
            <img src="/Content/Images/friends.jpg" alt="friends">
            <div class="carousel-caption">
                <h3>Przyjaciele</h3>
                <p>Zaproś do swojej biblioteki rodzinę i przyjaciół!</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>